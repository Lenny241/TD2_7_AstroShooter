<Window x:Class="AstroShooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AstroShooter"
        mc:Ignorable="d"
        Title="AstroShooter" 
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown" 
        KeyUp="Window_KeyUp"
        Focusable="True"
        SizeToContent="WidthAndHeight" Width="1375" Height="850">

    <Grid x:Name="gridMain" Height="850" Width="1375">

        <!-- Conteneur pour le menu, règles, paramètres, etc. -->
        <Grid x:Name="ScreenContainer" Panel.ZIndex="10" />

        <!-- Canvas du jeu -->
        <Canvas x:Name="GameCanvas" ClipToBounds="True" Opacity="0.9">
            <Canvas.Effect>
                <BlurEffect RenderingBias="Quality" Radius="10"/>
            </Canvas.Effect>
        </Canvas>

    </Grid>

</Window>
